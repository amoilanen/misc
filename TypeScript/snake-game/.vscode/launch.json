{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Current Test File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/.bin/vitest",
            "args": [
                "${file}",
                "--run",
                "--reporter=verbose"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}
