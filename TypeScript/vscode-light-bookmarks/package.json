{
  "name": "vscode-light-bookmarks",
  "displayName": "Light Bookmarks",
  "description": "A lightweight bookmark manager for VSCode with collections support",
  "version": "0.1.0",
  "publisher": "light-bookmarks",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "lightBookmarks.toggleBookmark",
        "title": "Toggle Bookmark",
        "category": "Light Bookmarks"
      },
      {
        "command": "lightBookmarks.addToCollection",
        "title": "Add to Collection",
        "category": "Light Bookmarks"
      },
      {
        "command": "lightBookmarks.removeFromCollection",
        "title": "Remove from Collection",
        "category": "Light Bookmarks"
      },
      {
        "command": "lightBookmarks.toggleCollectionVisibility",
        "title": "Toggle Collection Visibility",
        "category": "Light Bookmarks"
      },
      {
        "command": "lightBookmarks.createCollection",
        "title": "Create Collection",
        "category": "Light Bookmarks"
      },
      {
        "command": "lightBookmarks.deleteCollection",
        "title": "Delete Collection",
        "category": "Light Bookmarks"
      }
    ],
    "keybindings": [
      {
        "command": "lightBookmarks.toggleBookmark",
        "key": "ctrl+alt+k",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "light-bookmarks-vscode-light-bookmarks-bookmarksContainer",
          "title": "Bookmarks",
          "icon": "resources/bookmark-icon.svg"
        }
      ]
    },
    "views": {
      "light-bookmarks-vscode-light-bookmarks-bookmarksContainer": [
        {
          "id": "lightBookmarks.bookmarksView",
          "name": "Bookmarks"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "command": "lightBookmarks.toggleBookmark",
          "group": "navigation",
          "when": "editorTextFocus"
        },
        {
          "command": "lightBookmarks.addToCollection",
          "group": "navigation",
          "when": "editorTextFocus"
        }
      ],
      "commandPalette": [
        {
          "command": "lightBookmarks.toggleBookmark"
        },
        {
          "command": "lightBookmarks.createCollection"
        }
      ]
    },
    "configuration": {
      "title": "Light Bookmarks",
      "properties": {
        "lightBookmarks.maxBookmarks": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of bookmarks allowed"
        },
        "lightBookmarks.showLineNumbers": {
          "type": "boolean",
          "default": true,
          "description": "Show line numbers in bookmark list"
        },
        "lightBookmarks.autoSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically save bookmarks"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "16.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.57.1",
    "jest": "^29.2.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "uuid": "^9.0.0"
  }
}
