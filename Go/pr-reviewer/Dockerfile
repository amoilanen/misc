# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod and sum files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux go build -o pr-reviewer ./cmd/server

# Final stage
FROM alpine:latest

WORKDIR /app

# Copy the binary from builder
COPY --from=builder /app/pr-reviewer .

# Copy config file
COPY config.yaml .

# Create directory for GitHub private key
RUN mkdir -p /app/keys

# Expose port
EXPOSE 8080

# Run the application
CMD ["./pr-reviewer"] 